{
  "schemaVersion": 1,
  "id": "gamma_shifter",
  "version": "${version}",

  "name": "Gamma Shifter",
  "description": "Enables setting the gamma/brightness above 100% in Minecraft 1.19+",
  "authors": [
    "Aaron McMicking"
  ],
  "contact": {
    "homepage": "https://github.com/aaronmcmicking",
    "sources": "https://github.com/aaronmcmicking/gamma_shifter"
  },

  "license": "MIT",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.aaron.gamma_shifter.GammaShifter"
    ],
    "client":  [
      "net.aaron.gamma_shifter.GammaShifterClient"
    ]
  },
  "mixins": [
    "gamma_shifter.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.19",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
