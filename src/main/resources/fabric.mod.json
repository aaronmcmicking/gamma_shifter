{
  "schemaVersion": 1,
  "id": "gamma_shifter",
  "version": "${version}",

  "name": "Gamma Shifter",
  "description": "Customizable fullbright utilities with auto night-sight for 1.19+.\nAny feedback can be submitted on GitHub and is greatly appreciated!",
  "authors": [
    "Aaron McMicking"
  ],
  "contact": {
    "homepage": "https://github.com/aaronmcmicking",
    "sources": "https://github.com/aaronmcmicking/gamma_shifter",
    "issues":  "https://github.com/aaronmcmicking/gamma_shifter/issues"
  },

  "license": "MIT",
  "icon": "assets/modid/icon.png",

  "environment": "client",
  "entrypoints": {
    "client":  [
      "net.aaron.gamma_shifter.GammaShifter"
    ],
    "modmenu": [
      "net.aaron.gamma_shifter.config.ModMenuApiImplementation"
    ]
  },
  "mixins": [
    "gamma_shifter.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.21",
    "fabric-api": "*",
    "minecraft": ">=1.20.0",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  },

  "accessWidener": "gamma_shifter.accesswidener"
}
